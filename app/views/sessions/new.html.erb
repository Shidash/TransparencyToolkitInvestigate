<% provide(:title, "Login") %>
<h1>Login</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(:session, url: sessions_path) do |f| %>

      <%= f.label :email %>
      <%= f.text_field :email %>

      <%= f.label :password %>
      <%= f.password_field :password %>
      <br />
      <div id="login">
	<%= f.submit "Login", class: "btn btn-primary btn-small" %>
      </div>
    <% end %>

    <p>New user? <%= link_to "Register", signup_path %></p>
  </div>
</div>
