<%- model_class = Task -%>

<br />
<table class="table table-striped table-condensed">
  <thead>
    <tr>
      <th>Tasks</th>
    </tr>
  </thead>
  <tbody>
    <% question.tasks.each do |task| %>
    <tr>
        <td><%= link_to task.task, task_path(task) %></td>
        <td>
	  <div align="right">
            <button type="button" style="background-color: transparent;
					 border-color: transparent; cursor: default;" data-toggle="collapse" data-target="#<%= task.id %>"><icon class="icon-plus"></i></button></div>
</div>
</td>
</tr>
<tr>
  <td><div id="<%= task.id %>" class="collapse">
      <%= task.description %>
      <div align="right">
	<%= link_to t('.edit', :default => t("helpers.links.edit")),
	edit_task_path(task), :class => 'btn btn-mini' %>
	<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
	task_path(task),
	:method => :delete,
	:data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
	:class => 'btn btn-mini btn-danger' %>
      </div></div>
  </td>
</tr>
<% end %>
</tbody>
</table>
