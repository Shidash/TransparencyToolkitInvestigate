<%- model_class = Task -%>
<%= render :partial => "tasks/form", :locals => { :question => question } %>
<br />
<table class="table table-striped table-condensed">
  <thead>
    <tr>
      <th>Tasks</th>
    </tr>
  </thead>
  <tbody>
    <% question.tasks.delete_if(&:new_record?).each do |task| %>
    <tr>
        <td><%= link_to task.task, task_path(task) %></td>
        <td>
	  <div align="right">
            <button type="button" style="background-color: transparent;
					 border-color: transparent; cursor: default;" data-toggle="collapse" data-target="#<%= task.id %>task"><icon class="icon-plus"></i></button></div>
</div>
</td>
</tr>
<tr>
  <td><div id="<%= task.id %>task" class="collapse">
      <ul class="nav nav-tabs" id="tasktabs" data-tabs="tabs">
        <li class="active"><a href="#detailstask<%= task.id %>" data-toggle="tab">Details</a></li>
        <li><a href="#historytask<%= task.id %>" data-toggle="tab">Edit History</a></li>
      </ul>
      <div class="tab-content">
        <div class="tab-pane active" id="detailstask<%= task.id %>">
	  <%= task.description %><br />
      <div align="right">
	<%= link_to t('.edit', :default => t("helpers.links.edit")),
	edit_task_path(task), :class => 'btn btn-mini' %>
	<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
	task_path(task),
	:method => :delete,
	:data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
	:class => 'btn btn-mini btn-danger' %>
      </div><br />
      <%= render :partial => "results/result", :locals => { :task => task } %>
    </div></div>
      <div class="tab-pane" id="historytask<%= task.id %>">
        <%= render :partial => "history", :locals => { :task => task } %>
      </div>
    </div>
  </td>
</tr>
<% end %>
</tbody>
</table>
