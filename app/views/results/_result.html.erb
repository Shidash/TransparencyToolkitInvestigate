<%- model_class = Result -%>
<%= render :partial => "results/form", :locals => { :task => task } %>
<br />
<table class="table table-striped table-condensed">
  <thead>
    <tr>
      <th>Results</th>
    </tr>
  </thead>
  <tbody>
    <% task.results.delete_if(&:new_record?).each do |result| %>
    <tr>
      <td><%= result.description %><br />
	<%= link_to result.document.identifier, result.document.url %><br />
	<div align="right">
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
          edit_result_path(result), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
          result_path(result),
          :method => :delete,
          :data => { :confirm => t('.confirm', :default =>
          t("helpers.links.confirm", :default => 'Are you sure?')) },
          :class => 'btn btn-mini btn-danger' %>
	</div>
      </td>
    </tr>
<% end %>
</tbody>
</table>
