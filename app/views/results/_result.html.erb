<%- model_class = Result -%>
<%= render :partial => "results/form", :locals => { :task => task } %>
<br />
<table class="table table-striped table-condensed">
  <thead>
    <tr>
      <th>Results</th>
    </tr>
  </thead>
  <tbody>
    <% task.results.delete_if(&:new_record?).each do |result| %>
    <tr>
      <td>
	<ul class="nav nav-tabs" id="resulttabs" data-tabs="tabs">
          <li class="active"><a href="#detailsresult<%= result.id %>"
				data-toggle="tab">Details</a></li>
          <li><a href="#historyresult<%= result.id %>" data-toggle="tab">Edit History</a></li>
	</ul>
	<div class="tab-content">
          <div class="tab-pane active" id="detailsresult<%= result.id %>">
	    <%= result.description %><br />
	    <%= link_to result.document.identifier, result.document.url %><br />
	    <div align="right">
              <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_result_path(result), :class => 'btn btn-mini' %>
              <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              result_path(result),
              :method => :delete,
              :data => { :confirm => t('.confirm', :default =>
              t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-mini btn-danger' %>
	    </div></div>
	     <div class="tab-pane" id="historyresult<%= result.id %>">
               <%= render :partial => "history", :locals => { :result => result } %>
	     </div>
	</div>

      </td>
    </tr>
<% end %>
</tbody>
</table>

