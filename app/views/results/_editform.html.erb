<%= simple_form_for result, :html => { :multipart => true, :class => 'form-inline' } do |f| %>
<%= f.input :description, label: false, placeholder: 'Contribute results from the task' %>
<%= f.file_field :document, label: false %>
<div align="right">
  <%= f.submit 'Update', :class => 'btn-primary btn-small' %>
  <%= link_to t('.destroy', :default =>
  t("helpers.links.destroy")),
  result_path(result),
  :method => :delete,
  :data => { :confirm => t('.confirm', :default =>
  t("helpers.links.confirm", :default => 'Are you sure?')) },
  :class => 'btn btn-small btn-danger' %>
</div>
<% end %>
