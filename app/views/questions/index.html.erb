<%- model_class = Question -%>
<div class="page-header">
  <h1>Goals and Questions to Investigate</h1>
</div>
<%= render :partial => "form", :locals => { :question => @question } %>
<br />
<table class="table table-striped table-condensed">
  <thead>
    <tr>
      <th>Goal/Question</th>
    </tr>
  </thead>
  <tbody>
    <% @questions.each do |question| %>
      <tr>
        <td><%= question.question %></td>
	<td><div align="right">
	    <button type="button" style="background-color:
					 transparent; border-color: transparent; cursor:
					 default;" data-toggle="collapse"
					 data-target="#<%= question.id %>"><icon class="icon-plus"></i></button></div> </td>
      </tr>
    <tr>
      <td><div id="<%= question.id %>" class="collapse">
	  <%= question.details %><br />
	  <div align="right">
	    <%= link_to t('.edit', :default => t("helpers.links.edit")),
            edit_question_path(question), :class => 'btn btn-mini' %>
            <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
            question_path(question),
            :method => :delete,
            :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %></div><br />
          <%= render :partial => "tasks/taskfull", :locals => { :question => question } %>
      </div></td>
    </tr>
    <% end %>
  </tbody>
</table>
