<%- model_class = Question -%>

<br />
<table class="table table-striped table-condensed">
  <thead>
    <tr>
      <th>Questions</th>
    </tr>
  </thead>
  <tbody>
    <% topic.questions.each do |question| %>
      <tr>
        <td><%= link_to question.question, question_path(question) %></td>
	<td>
	  <div align="right">
	      <button type="button" style="background-color:                                               
                      transparent; border-color: transparent; cursor:                                 
                      default;" data-toggle="collapse"
                      data-target="#<%= question.id %>"><icon class="icon-plus"></i></button></div>
	  </div>
	</td>
      </tr>
      <tr>
	<td><div id="<%= question.id %>" class="collapse">
	    <%= question.details %>
	    <div align="right">
	    <%= link_to t('.edit', :default => t("helpers.links.edit")),
            edit_question_path(question, topic), :class => 'btn btn-mini' %>
            <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
            question_path(question),
            :method => :delete,
            :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
	    </div>
	    <%= render :partial => "tasks/task", :locals => { :question => question } %>
	</div></td>
      </tr>
    <% end %>
  </tbody>
</table>

