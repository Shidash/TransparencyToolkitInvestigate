<%- model_class = Topic -%>
<div class="page-header">
  <h1>Topics to Investigate</h1>
</div>

<br />
<table class="table table-striped table-condensed">
  <tbody>
    <% @topics.each do |topic| %>
      <tr>
        <td><%= link_to topic.title, topic_path(topic) %></td>
	<td><div align="right">
	 <button type="button" style="background-color:
                      transparent; border-color: transparent; cursor:
                      default;" data-toggle="collapse"
                      data-target="#<%= topic.id %>"><icon class="icon-plus"></i></button></div> 
	</td>
      </tr>
    <tr>
	<td><div id="<%= topic.id %>" class="collapse">
	    <%= topic.description %><br />
	    <div align="right">
	    <%= link_to t('.edit', :default => t("helpers.links.edit")),
            edit_topic_path(topic), :class => 'btn btn-mini' %>
            <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
            topic_path(topic),
            :method => :delete,
            :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %></div>
             <%= render :partial => "questions/question", :locals  => { :topic => topic } %>

	  </div</td>
    </tr>
    <% end %>
  </tbody>
</table>
